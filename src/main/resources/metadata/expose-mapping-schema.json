{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Expose Mapping Schema",
  "properties": {
    "entityType": {
      "type": "string",
      "description": "Entity type"
    },
    "mappings": {
      "type": "object",
      "description": "Field mappings",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "jsonPath": {
            "type": "string"
          },
          "column": {
            "type": "string"
          },
          "type": {
            "type": "string"
          }
        }
      }
    }
  },
  "anyOf": [
    { "required": ["jsonPath"] },
    { "required": ["mappings"] }
  ]
}

